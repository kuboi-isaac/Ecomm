<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecomm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecomm.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>

        /* Chat Bot Styles */
        #chatBotContainer {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1100;
            font-family: Arial, sans-serif;
        }

        #chatBotToggle {
            background: var(--accent-primary);
            color: #fff;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow-lg);
            transition: transform 0.3s;
        }

            #chatBotToggle:hover {
                transform: scale(1.1);
            }

        #chatBotPanel {
            display: none;
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 300px;
            max-height: 400px;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: var(--shadow-lg);
            flex-direction: column;
            overflow: hidden;
        }

        #chatBotHeader {
            background: var(--accent-primary);
            color: #fff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #chatBotMessages {
            padding: 10px;
            height: 250px;
            overflow-y: auto;
            background: var(--bg-secondary);
        }

        .chat-message {
            margin-bottom: 10px;
            padding: 6px 10px;
            border-radius: 8px;
            max-width: 80%;
        }

        .chat-user {
            background: var(--accent-secondary);
            color: #fff;
            align-self: flex-end;
        }

        .chat-bot {
            background: var(--bg-tertiary);
            color: var(--text-primary);
            align-self: flex-start;
        }

        #chatBotInputArea {
            display: flex;
            border-top: 1px solid var(--border-color);
        }

        #chatBotInput {
            flex: 1;
            padding: 8px;
            border: none;
            outline: none;
        }

        #chatBotSend {
            background: var(--accent-primary);
            border: none;
            color: #fff;
            padding: 0 12px;
            cursor: pointer;
        }

        :root {
            /* Modern Light Theme */
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-tertiary: #e9ecef;
            --text-primary: #1a1a1a;
            --text-secondary: #6c757d;
            --text-muted: #868e96;
            --border-color: #dee2e6;
            --border-light: #f1f3f4;
            --accent-primary: #6366f1;
            --accent-secondary: #8b5cf6;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #06b6d4;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --card-bg: #ffffff;
            --navbar-bg: #ffffff;
            --footer-bg: #f8f9fa;
            --input-bg: #ffffff;
            --table-bg: #ffffff;
            --table-hover: #f8f9fa;
        }

        /* Base Theme Application */
        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            transition: all 0.3s ease-in-out;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        /* Navbar Styling */
        .navbar {
            background-color: var(--navbar-bg) !important;
            border-bottom: 1px solid var(--border-color) !important;
            box-shadow: var(--shadow);
            transition: all 0.3s ease-in-out;
            padding: 0.6rem 1rem; /* better spacing */
        }

        /* Mobile screens */
        @@media (max-width: 768px) {
            .navbar

        {
            padding: 0.5rem 0.8rem;
        }

        .navbar-brand img {
            max-height: 35px; /* keeps logo from being too large */
        }

        .navbar-nav .nav-link {
            padding: 0.5rem 0; /* reduce spacing for collapsed menu */
            font-size: 0.95rem;
        }

        }

        /* Extra small screens */
        @@media (max-width: 576px) {
            .navbar

        {
            padding: 0.4rem 0.6rem;
        }

        .navbar-toggler {
            padding: 0.25rem 0.5rem;
            font-size: 1rem;
        }

        }


        .nav-link {
            position: relative;
            padding: 0.5rem 1rem;
            transition: all 0.01s ease;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .nav-link:hover::after {
    width: 80%;
}

.nav-link:hover {
    color: var(--accent-primary) !important;
    transform: translateY(-2px);
}

        .dropdown-menu {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-lg);
        }

        .dropdown-item {
            color: var(--text-primary);
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: var(--accent-primary);
                color: white;
            }

        /* Search Bar */
        .navbar-search {
            min-width: 400px;
            max-width: 600px;
            flex: 1;
        }

            .navbar-search .input-group {
                box-shadow: var(--shadow);
            }

        .form-control {
            background-color: var(--input-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: var(--input-bg);
                color: var(--text-primary);
                border-color: var(--accent-primary);
                box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            border: none;
            color: white;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: var(--shadow-lg);
                background: linear-gradient(135deg, var(--accent-secondary), var(--accent-primary));
            }

        .btn-outline-primary {
            color: var(--accent-primary);
            border-color: var(--accent-primary);
            background: transparent;
        }

            .btn-outline-primary:hover {
                background-color: var(--accent-primary);
                border-color: var(--accent-primary);
                color: white;
                transform: translateY(-1px);
            }

        .btn-outline-secondary {
            color: var(--text-secondary);
            border-color: var(--border-color);
            background: transparent;
        }

            .btn-outline-secondary:hover {
                background-color: var(--bg-secondary);
                border-color: var(--border-color);
                color: var(--text-primary);
            }

        /* Cards */
        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
            }

        .card-header {
            background-color: var(--bg-secondary);
            border-bottom: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        .card-body {
            background-color: var(--card-bg);
            color: var(--text-primary);
        }

        .card-footer {
            background-color: var(--bg-secondary);
            border-top: 1px solid var(--border-color);
            color: var(--text-secondary);
        }

        /* Alerts */
        .alert {
            border: none;
            border-left: 4px solid;
            box-shadow: var(--shadow);
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border-left-color: var(--success-color);
            color: #155724;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f1b0b7 100%);
            border-left-color: var(--danger-color);
            color: #721c24;
        }

        .alert-warning {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border-left-color: var(--warning-color);
            color: #856404;
        }

        .alert-info {
            background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
            border-left-color: var(--info-color);
            color: #0c5460;
        }

        /* Tables */
        .table {
            background-color: var(--table-bg);
            color: var(--text-primary);
            border-color: var(--border-color);
        }

            .table th {
                background-color: var(--bg-secondary);
                border-color: var(--border-color);
                color: var(--text-primary);
                font-weight: 600;
            }

            .table td {
                border-color: var(--border-color);
                background-color: var(--table-bg);
            }

        .table-hover tbody tr:hover {
            background-color: var(--table-hover);
        }

        /* Footer */
        .footer {
            background-color: var(--footer-bg) !important;
            border-top: 1px solid var(--border-color) !important;
            color: var(--text-secondary);
            margin-top: auto;
            transition: all 0.3s ease-in-out;
        }

            .footer a {
                color: var(--accent-primary);
                text-decoration: none;
                transition: color 0.2s ease;
            }

                .footer a:hover {
                    color: var(--accent-secondary);
                }

        /* Badges */
        .badge {
            font-weight: 500;
        }

        .bg-primary {
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)) !important;
        }

        .bg-danger {
            background-color: var(--danger-color) !important;
        }

        /* Form Elements */
        .form-select {
            background-color: var(--input-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

            .form-select:focus {
                border-color: var(--accent-primary);
                box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            }

        /* Custom Components */
        .theme-toggle {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .theme-toggle:hover {
                transform: rotate(15deg);
            }

        .nav-icon {
            margin-right: 8px;
            width: 16px;
            text-align: center;
            color: var(--accent-primary);
        }

        .cart-count {
            font-size: 0.7em;
            position: absolute;
            top: -5px;
            right: -5px;
        }

        /* Section Styling */
        .section {
            background-color: var(--bg-secondary);
            border-radius: 12px;
            padding: 2rem;
            margin: 1rem 0;
            border: 1px solid var(--border-color);
        }

        .section-dark {
            background-color: var(--bg-tertiary);
        }

        /* Product Cards */
        .product-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 0.5rem;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
                border-color: var(--accent-primary);
            }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .navbar-search {
                min-width: 300px;
                margin: 10px 0;
            }
        }

        @@media (max-width: 768px) {
            .navbar-search {
                min-width: 250px;
            }

            .section {
                padding: 1rem;
                margin: 0.5rem 0;
            }
        }

        @@media (max-width: 576px) {
            .navbar-search {
                min-width: 100%;
                margin: 10px 0;
            }

            .product-card {
                padding: 1rem;
            }
        }

        /* Smooth transitions for all interactive elements */
        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-secondary);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--accent-primary);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--accent-secondary);
            }

        /* Enhanced Alert Styles */
        .custom-alert {
            position: relative;
            border: none;
            border-radius: 12px;
            padding: 0;
            margin: 1rem 0;
            box-shadow: var(--shadow-lg);
            border-left: 4px solid;
            animation: slideInDown 0.5s ease-out;
            z-index: 1055; /* Above everything */
        }

        /* Alert Content Layout */
        .alert-content {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            gap: 1rem;
        }

        .alert-icon {
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .alert-message {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

            .alert-message strong {
                font-size: 1rem;
                font-weight: 600;
            }

            .alert-message span {
                font-size: 0.9rem;
                opacity: 0.9;
            }

        /* Custom Close Button */
        .custom-close {
            background: none;
            border: none;
            padding: 0.5rem;
            border-radius: 50%;
            opacity: 0.7;
            transition: all 0.3s ease;
            flex-shrink: 0;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .custom-close:hover {
                opacity: 1;
                background: rgba(0, 0, 0, 0.1);
                transform: scale(1.1);
            }

        /* Animations */
        @@keyframes slideInDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes fadeOutUp {
            from {
                transform: translateY(0);
                opacity: 1;
            }

            to {
                transform: translateY(-100%);
                opacity: 0;
            }
        }

        .custom-alert.fade:not(.show) {
            animation: fadeOutUp 0.5s ease-in forwards;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .alert-content {
                padding: 0.75rem 1rem;
                gap: 0.75rem;
            }

            .alert-icon {
                font-size: 1.25rem;
            }

            .alert-message strong {
                font-size: 0.9rem;
            }

            .alert-message span {
                font-size: 0.85rem;
            }

            .custom-close {
                width: 28px;
                height: 28px;
            }
        }

        /* Ensure alerts are above everything */
        .alert {
            z-index: 1055 !important;
            position: relative;
        }

        /* Auto-hide animation */
        .auto-hide {
            animation: autoHide 5s ease-in forwards;
        }

      @@keyframes autoHide { 
            0% {
                opacity: 1;
            }

            70% {
                opacity: 1;
            }

            100% {
                opacity: 0;
                transform: translateY(-100%);
            }
      }

        .navbar-toggler-icon {
            display: inline-block;
            width: 1.5em;
            height: 1.5em;
            vertical-align: middle;
            background-image: var(--bs-navbar-toggler-icon-bg);
            background-repeat: no-repeat;
            background-position: center;
            background-size: 100%;
            background-color: dimgrey;
        }

        /* Amazon Navbar */
        .amazon-nav {
            background-color: #ffffff;
            padding: 10px 20px;
            height: 60px;
        }

        .amazon-logo img {
            height: 55px;
        }

        .amazon-nav-link {
            color: darkblue !important;
            font-size: 14px;
            padding: 8px 12px;
            text-decoration: underline;
        }

            .amazon-nav-link:hover {
                color: cornflowerblue !important;
            }

        /* Search bar */
        .amazon-search {
            flex-grow: 1;
            max-width: 600px;
            margin: 0 20px;
            border-style: unset;
        }

        .amazon-search-input {
            border-radius: 4px 0 0 4px;
            border: thin;
            height: 40px;
        }

        .amazon-search-btn {
            background: #ffffff;
            border-radius: 0 4px 4px 0;
            border: none;
            height: 40px;
        }

            .amazon-search-btn:hover {
                background: #6366f1;
            }

        /* Cart */
        .amazon-cart-count {
            background: #f99999;
            color: #000;
            font-weight: bold;
            padding: 2px 6px;
            font-size: 12px;
            border-radius: 50%;
            position: absolute;
            top: -3px;
            right: -12px;
        }

        .amazon-right-nav .amazon-nav-link {
            margin-left: 15px;
        }

        /* Mobile Toggle Style */
        .amazon-toggle .navbar-toggler-icon {
            filter: invert(1);
        }

        /* Dropdown */
        .dropdown-menu {
            font-size: 14px;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg amazon-nav">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand amazon-logo d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="https://img1.wsimg.com/isteam/ip/48686206-1376-4d8b-bb8b-665ec1c50e07/blob-1afa769.png/:/rs=w:195,h:162,cg=true,m/cr=w:195,h:162/qt=q:95" />
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler amazon-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Content -->
                <div class="collapse navbar-collapse" id="navbarMain">

                    <!-- LEFT: Menu -->
                    <ul class="navbar-nav me-auto align-items-center amazon-left-nav">

                        <li class="nav-item">
                            <a class="amazon-nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="amazon-nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                Products
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">All Products</a></li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Create">Add Product</a></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="LowStock">Low Stock</a></li>
                                }
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="amazon-nav-link" asp-controller="Checkout" asp-action="OrderHistory">Orders</a>
                        </li>
                    </ul>

                    <!-- CENTER: Search -->
                    <form class="amazon-search" method="get" action="@Url.Action("Index", "Products")">
                        <div class="input-group">
                            <input class="form-control amazon-search-input" type="search" name="searchString" placeholder="Search products">
                            <button class="btn amazon-search-btn" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- RIGHT: User & Cart -->
                    <ul class="navbar-nav ms-auto align-items-center amazon-right-nav">

                        <!-- Account -->
                        <li class="nav-item dropdown">
                            <a href="#" class="amazon-nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <partial name="_LoginPartial" />
                            </ul>
                        </li>

                        <!-- Cart -->
                        <li class="nav-item">
                            <a class="amazon-nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="amazon-cart-count" id="cartCount">0</span>
                                Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>


    <div class="container">
        <!-- Enhanced Notification Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
                <div class="alert-content">
                    <div class="alert-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="alert-message">
                        <strong>Success!</strong>
                        <span>@TempData["Success"]</span>
                    </div>
                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
                <div class="alert-content">
                    <div class="alert-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="alert-message">
                        <strong>Error!</strong>
                        <span>@TempData["Error"]</span>
                    </div>
                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show custom-alert" role="alert">
                <div class="alert-content">
                    <div class="alert-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="alert-message">
                        <strong>Info</strong>
                        <span>@TempData["Info"]</span>
                    </div>
                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show custom-alert" role="alert">
                <div class="alert-content">
                    <div class="alert-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div class="alert-message">
                        <strong>Warning!</strong>
                        <span>@TempData["Warning"]</span>
                    </div>
                    <button type="button" class="btn-close custom-close" data-bs-dismiss="alert" aria-label="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-1">
        <div class="container">
            <div class="row">

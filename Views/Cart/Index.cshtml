@model Ecomm.Controllers.CartViewModel
@using Ecomm.Helpers
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-4">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (!Model.CartItems.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
            <h3>Your cart is empty</h3>
            <p class="text-muted mb-4">Start shopping to add items to your cart</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Cart Items (@Model.CartItems.Sum(item => item.Quantity) items)</h5>
                    </div>
                    <div class="card-body" id="cartItemsContainer">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row align-items-center mb-4 pb-3 border-bottom cart-item" data-item-id="@item.Id">
                                <div class="col-md-2">
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                         class="img-fluid rounded" style="max-height: 80px;">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.Product.Name</h6>
                                    <small class="text-muted">@item.Product.Category?.Name</small>
                                </div>
                                <div class="col-md-2">
                                    <span class="h6">@CurrencyHelper.FormatUGX(item.Product.Price)</span> <!-- FIXED -->
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary quantity-btn"
                                                type="button" data-action="decrease" data-item-id="@item.Id">
                                            -
                                        </button>
                                        <input type="number" class="form-control text-center quantity-input"
                                               value="@item.Quantity" min="1" max="@item.Product.StockCount"
                                               data-item-id="@item.Id" style="max-width: 60px;">
                                        <button class="btn btn-outline-secondary quantity-btn"
                                                type="button" data-action="increase" data-item-id="@item.Id">
                                            +
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="text-end">
                                        <span class="h6 item-total" data-item-id="@item.Id">
                                            @CurrencyHelper.FormatUGX(item.Product.Price * item.Quantity) <!-- FIXED -->
                                        </span>
                                        <br>
                                        <button class="btn btn-link text-danger btn-sm remove-item"
                                                data-item-id="@item.Id" title="Remove item">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="subtotal">@CurrencyHelper.FormatUGX(Model.TotalAmount)</span> <!-- FIXED -->
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span id="tax">@CurrencyHelper.FormatUGX(Model.TotalAmount * 0.1m)</span> <!-- FIXED -->
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong id="total">@CurrencyHelper.FormatUGX(Model.TotalAmount * 1.1m)</strong> <!-- FIXED -->
                        </div>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary btn-lg">
                                Proceed to Checkout
                            </a>
                            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Security Badges -->
                <div class="card mt-3">
                    <div class="card-body text-center">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-shield-alt text-success fa-2x mb-2"></i>
                                <p class="small mb-0">Secure Payment</p>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-truck text-success fa-2x mb-2"></i>
                                <p class="small mb-0">Free Shipping</p>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-undo-alt text-success fa-2x mb-2"></i>
                                <p class="small mb-0">Easy Returns</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quantity buttons
            $('.quantity-btn').click(function() {
                var itemId = $(this).data('item-id');
                var action = $(this).data('action');
                var input = $(`.quantity-input[data-item-id="${itemId}"]`);
                var currentVal = parseInt(input.val());
                var maxVal = parseInt(input.attr('max'));

                if (action === 'increase' && currentVal < maxVal) {
                    input.val(currentVal + 1);
                    updateQuantity(itemId, currentVal + 1);
                } else if (action === 'decrease' && currentVal > 1) {
                    input.val(currentVal - 1);
                    updateQuantity(itemId, currentVal - 1);
                }
            });

            // Quantity input change
            $('.quantity-input').change(function() {
                var itemId = $(this).data('item-id');
                var quantity = parseInt($(this).val());
                var maxVal = parseInt($(this).attr('max'));

                if (quantity < 1) quantity = 1;
                if (quantity > maxVal) quantity = maxVal;

                $(this).val(quantity);
                updateQuantity(itemId, quantity);
            });

            // Remove item
            $('.remove-item').click(function() {
                var itemId = $(this).data('item-id');
                if (confirm('Are you sure you want to remove this item from your cart?')) {
                    removeItem(itemId);
                }
            });

            function updateQuantity(itemId, quantity) {
                // Get anti-forgery token
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: JSON.stringify({
                        cartItemId: itemId,
                        quantity: quantity
                    }),
                    contentType: 'application/json',
                    success: function(response) {
                        if (response.success) {
                            // Update item total - FIXED: Use UGX formatting
                            var itemTotal = 'Ushs ' + (response.itemTotal * 3800).toLocaleString();
                            $(`.item-total[data-item-id="${itemId}"]`).text(itemTotal);

                            // Update summary - FIXED: Use UGX formatting
                            var subtotal = 'Ushs ' + (response.totalAmount * 3800).toLocaleString();
                            var tax = 'Ushs ' + (response.totalAmount * 0.1 * 3800).toLocaleString();
                            var total = 'Ushs ' + (response.totalAmount * 1.1 * 3800).toLocaleString();

                            $('#subtotal').text(subtotal);
                            $('#tax').text(tax);
                            $('#total').text(total);

                            // Update cart count in navbar
                            updateCartCount(response.cartCount);

                            showToast('Quantity updated successfully!');
                        } else {
                            showToast(response.message, 'error');
                            location.reload(); // Reload to sync with server
                        }
                    },
                    error: function() {
                        showToast('Error updating quantity', 'error');
                        location.reload();
                    }
                });
            }

            function removeItem(itemId) {
                // Get anti-forgery token
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "Cart")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: JSON.stringify({
                        cartItemId: itemId
                    }),
                    contentType: 'application/json',
                    success: function(response) {
                        if (response.success) {
                            // Remove the item row from UI
                            var itemElement = $(`.cart-item[data-item-id="${itemId}"]`);

                            itemElement.fadeOut(300, function() {
                                $(this).remove();

                                // Update cart count in navbar
                                updateCartCount(response.cartCount);

                                // Update totals - FIXED: Use UGX formatting
                                var subtotal = 'Ushs ' + (response.totalAmount * 3800).toLocaleString();
                                var tax = 'Ushs ' + (response.totalAmount * 0.1 * 3800).toLocaleString();
                                var total = 'Ushs ' + (response.totalAmount * 1.1 * 3800).toLocaleString();

                                $('#subtotal').text(subtotal);
                                $('#tax').text(tax);
                                $('#total').text(total);

                                // Check if cart is empty
                                if ($('.cart-item').length === 0) {
                                    // Reload to show empty cart message
                                    setTimeout(function() {
                                        location.reload();
                                    }, 500);
                                }

                                showToast(response.message);
                            });
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error removing item:', error);
                        showToast('Error removing item from cart', 'error');
                    }
                });
            }

            function updateCartCount(count) {
                var cartCountElement = $('#cartCount');
                cartCountElement.text(count);

                if (count === 0) {
                    cartCountElement.hide();
                } else {
                    cartCountElement.show();
                    cartCountElement.removeClass('bg-secondary').addClass('bg-danger');
                }
            }

            // Show toast notification
            function showToast(message, type = 'success') {
                // Create toast if it doesn't exist
                if ($('#cartToast').length === 0) {
                    $('body').append(`
                        <div class="toast-container position-fixed top-0 end-0 p-3">
                            <div id="cartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="toast-header">
                                    <i class="fas fa-shopping-cart text-primary me-2"></i>
                                    <strong class="me-auto">Cart</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                                <div class="toast-body" id="toastMessage">
                                    ${message}
                                </div>
                            </div>
                        </div>
                    `);
                }

                const toastElement = $('#cartToast');
                const toastMessage = $('#toastMessage');

                toastMessage.text(message);

                // Set background color based on type
                const toastHeader = toastElement.find('.toast-header');
                if (type === 'error') {
                    toastHeader.addClass('bg-danger text-white');
                } else {
                    toastHeader.removeClass('bg-danger text-white');
                }

                const toast = new bootstrap.Toast(toastElement[0]);
                toast.show();
            }
        });
    </script>
}
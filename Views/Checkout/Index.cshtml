@model Ecomm.Controllers.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-4">
    <h2 class="mb-4">Checkout</h2>

    <form asp-action="ProcessOrder" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Customer Information -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Customer Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label">Full Name *</label>
                                    <input asp-for="FullName" class="form-control" required />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" class="form-control" type="email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number *</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Shipping Address *</label>
                            <textarea asp-for="Address" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">City *</label>
                                    <input asp-for="City" class="form-control" required />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ZipCode" class="form-label">ZIP Code *</label>
                                    <input asp-for="ZipCode" class="form-control" required />
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile Money Payment Information -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Mobile Money Payment</h5>
                    </div>
                    <div class="card-body">
                        <!-- Mobile Money Provider Selection -->
                        <div class="mb-4">
                            <label class="form-label">Select Mobile Money Provider *</label>
                            <div class="row">
                                <div class="col-md-4 mb-2">
                                    <div class="form-check card provider-card">
                                        <input class="form-check-input" type="radio" name="MobileMoneyProvider" id="mtn" value="MTN" checked>
                                        <label class="form-check-label w-100 p-3" for="mtn">
                                            <div class="text-center">
                                                <i class="fas fa-mobile-alt fa-2x text-warning mb-2"></i>
                                                <h6 class="mb-1">MTN Mobile Money</h6>
                                                <small class="text-muted">Pay with MTN</small>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check card provider-card">
                                        <input class="form-check-input" type="radio" name="MobileMoneyProvider" id="airtel" value="Airtel">
                                        <label class="form-check-label w-100 p-3" for="airtel">
                                            <div class="text-center">
                                                <i class="fas fa-sim-card fa-2x text-danger mb-2"></i>
                                                <h6 class="mb-1">Airtel Money</h6>
                                                <small class="text-muted">Pay with Airtel</small>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check card provider-card">
                                        <input class="form-check-input" type="radio" name="MobileMoneyProvider" id="orange" value="Orange">
                                        <label class="form-check-label w-100 p-3" for="orange">
                                            <div class="text-center">
                                                <i class="fas fa-phone-alt fa-2x text-orange mb-2"></i>
                                                <h6 class="mb-1">Orange Money</h6>
                                                <small class="text-muted">Pay with Orange</small>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mobile Money Number -->
                        <div class="mb-3">
                            <label asp-for="MobileMoneyNumber" class="form-label">Mobile Money Number *</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-phone"></i>
                                </span>
                                <input asp-for="MobileMoneyNumber" class="form-control" placeholder="e.g., 256712345678" required />
                            </div>
                            <span asp-validation-for="MobileMoneyNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Enter your mobile money registered phone number</small>
                        </div>

                        <!-- Payment Instructions -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> How to Pay:</h6>
                            <ol class="mb-0 small">
                                <li>Click "Place Order" to confirm your order</li>
                                <li>You will receive a payment request on your phone</li>
                                <li>Enter your Mobile Money PIN to complete payment</li>
                                <li>You will receive confirmation via SMS and email</li>
                            </ol>
                        </div>

                        <!-- Terms Agreement -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label small" for="agreeTerms">
                                I agree to the <a href="#">Terms of Service</a> and authorize the charge to my Mobile Money account
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0">@item.Product.Name</h6>
                                    <small class="text-muted">Qty: @item.Quantity</small>
                                </div>
                                <span>@((item.Product.Price * item.Quantity).ToString("C2"))</span>
                            </div>
                        }

                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.TotalAmount.ToString("C2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span>@((Model.TotalAmount * 0.1m).ToString("C2"))</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>@((Model.TotalAmount * 1.1m).ToString("C2"))</strong>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-mobile-alt me-2"></i>Place Order
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt"></i> Secure Mobile Money Payment
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Support Information -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6>Need Help?</h6>
                        <p class="small mb-1">
                            <i class="fas fa-phone"></i> 1-800-ECOMMERCE
                        </p>
                        <p class="small mb-1">
                            <i class="fas fa-envelope"></i> support@ecommerce.com
                        </p>
                        <p class="small mb-0">
                            <i class="fas fa-clock"></i> 24/7 Support
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Format phone number for mobile money
        $('#MobileMoneyNumber').on('input', function() {
            var value = $(this).val().replace(/\D/g, '');
            $(this).val(value);
        });

        // Provider card selection styling
        $('.provider-card').click(function() {
            $('.provider-card').removeClass('border-primary');
            $(this).addClass('border-primary');
            $(this).find('input[type="radio"]').prop('checked', true);
        });

        // Form validation for terms agreement
        $('form').submit(function(e) {
            if (!$('#agreeTerms').is(':checked')) {
                e.preventDefault();
                alert('Please agree to the terms and conditions to proceed with payment.');
                $('#agreeTerms').focus();
            }
        });
    </script>
}

<style>
    .provider-card {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid #e9ecef;
    }

        .provider-card:hover {
            border-color: #4299e1;
            transform: translateY(-2px);
        }

        .provider-card.border-primary {
            border-color: #4299e1 !important;
            background-color: #f8f9ff;
        }

    .text-orange {
        color: #ff6b35;
    }

    .form-check-input {
        position: absolute;
        opacity: 0;
    }

    .provider-card .form-check-label {
        cursor: pointer;
    }
</style>
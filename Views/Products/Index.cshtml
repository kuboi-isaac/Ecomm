@model IEnumerable<Ecomm.Models.Product>
@using Ecomm.Helpers
@{
    ViewData["Title"] = "Products";
}

<!-- CRITICAL FIX: Add anti-forgery token here -->
@Html.AntiForgeryToken()

<style>
    .truncate {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        position: relative;
        padding: 10px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 13px;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 12px;
        line-height: 1.3;
    }

    .price-text {
        font-size: 14px;
        font-weight: bold;
    }

    .card-badge {
        font-size: 11px;
    }

    .category-text {
        font-size: 11px;
    }

    .admin-buttons {
        margin-top: 0.5rem;
    }

        .admin-buttons .btn {
            font-size: 11px;
            padding: 0.25rem 0.5rem;
        }

    .loading-spinner {
        display: none;
        width: 16px;
        height: 16px;
    }

    /* Enhanced Toast styles */
    .toast {
        background-color: var(--card-bg);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        min-width: 350px;
    }

    .toast-header {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        border-bottom: 2px solid var(--border-color);
        border-radius: 10px 10px 0 0;
        padding: 0.75rem 1rem;
        font-weight: 600;
    }

        .toast-header .btn-close {
            filter: invert(1) brightness(0.8);
        }

    .toast-body {
        background-color: var(--card-bg);
        color: var(--text-primary);
        padding: 1rem 1rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 0 0 10px 10px;
    }

    /* Success Toast */
    .toast.success .toast-header {
        background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
        color: white;
        border-bottom: 2px solid var(--success-color);
    }

    .toast.success .toast-body {
        background: rgba(16, 185, 129, 0.1);
        border-left: 4px solid var(--success-color);
    }

    /* Error Toast */
    .toast.error .toast-header {
        background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
        color: white;
        border-bottom: 2px solid var(--danger-color);
    }

    .toast.error .toast-body {
        background: rgba(239, 68, 68, 0.1);
        border-left: 4px solid var(--danger-color);
    }

    /* Warning Toast */
    .toast.warning .toast-header {
        background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
        color: white;
        border-bottom: 2px solid var(--warning-color);
    }

    .toast.warning .toast-body {
        background: rgba(245, 158, 11, 0.1);
        border-left: 4px solid var(--warning-color);
    }

    /* Info Toast */
    .toast.info .toast-header {
        background: linear-gradient(135deg, var(--info-color) 0%, #0891b2 100%);
        color: white;
        border-bottom: 2px solid var(--info-color);
    }

    .toast.info .toast-body {
        background: rgba(6, 182, 212, 0.1);
        border-left: 4px solid var(--info-color);
    }

    /* Toast container positioning */
    .toast-container {
        z-index: 9999;
    }

    /* Animation for toast entrance */
    .toast.show {
        animation: toastSlideIn 0.3s ease-out;
    }

    @@keyframes toastSlideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* Hover effects */
    .toast:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
    }

    /* Mobile responsive */
    @@media (max-width: 576px) {
        .toast {
            min-width: 300px;
            margin: 0.5rem;
        }

        .toast-container {
            padding: 0.5rem;
        }
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-8 mt-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <form method="get" class="mb-2">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@(ViewBag.SearchString ?? "")">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Category Filter -->
                    <h6>Categories</h6>
                    <div class="list-group">
                        <a href="@Url.Action("Index", "Products")"
                           class="list-group-item list-group-item-action @(ViewBag.CategoryId == null ? "active" : "")">
                            All Categories
                        </a>
                        @if (ViewBag.Categories is List<Ecomm.Models.Category> categories && categories.Any())
                        {
                            @foreach (var category in categories)
                            {
                                <a href="@Url.Action("Index", "Products", new { categoryId = category.Id, searchString = ViewBag.SearchString })"
                                   class="list-group-item list-group-item-action @(ViewBag.CategoryId?.Equals(category.Id) == true ? "active" : "")">
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9 col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Product
                    </a>
                }
            </div>

            <!-- Products Grid -->
            @if (Model?.Any() != true)
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>No products found</h4>
                    <p class="text-muted">Try adjusting your search or filter criteria</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">Clear Filters</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card h-100 product-card" onclick="window.location.href='@Url.Action("Details", new { id = product.Id })'">
                                @{
                                    // Use actual ImageUrl from database, fallback to placeholder if empty
                                    var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id}";
                                }
                                <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 150px; object-fit: contain;" onerror="this.src='https://via.placeholder.com/300x180/007bff/ffffff?text=Product+Image'">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-muted flex-grow-1 text-truncate">@product.Description</p>

                                    <div class="md-4">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="price-text text-primary">@CurrencyHelper.FormatUGX(product.Price)</span>
                                            @if (product.IsOnSale)
                                            {
                                                <span class="badge bg-danger card-badge">Sale</span>
                                            }
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="badge card-badge @(product.StockCount > 0 ? "bg-success" : "bg-danger")">
                                                @(product.StockCount > 0 ? $"{product.StockCount} in stock" : "Out of stock")
                                            </span>
                                            <small class="text-muted category-text">@(product.Category?.Name ?? "Uncategorized")</small>
                                        </div>

                                        <!-- Add to Cart Button - COMPLETELY FIXED VERSION -->
                                        <div class="d-grid gap-2">
                                            @if (product.StockCount > 0)
                                            {
                                                <button type="button" class="btn btn-primary add-to-cart-btn"
                                                        onclick="addToCart(@product.Id, event)">
                                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                                    <div class="spinner-border spinner-border-sm loading-spinner" role="status">
                                                        <span class="visually-hidden">Loading...</span>
                                                    </div>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary add-to-cart-btn" disabled>
                                                    <i class="fas fa-cart-plus"></i> Out of Stock
                                                </button>
                                            }
                                        </div>

                                        <!-- Admin buttons (only show for admin users) -->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="admin-buttons">
                                                <div class="btn-group w-100">
                                                    <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-outline-danger btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="cartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-shopping-cart text-primary me-2"></i>
            <strong class="me-auto">Cart</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Product added to cart!
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load cart count when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadCartCount(); // Load initial cart count

            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.style.cursor = 'pointer';
                card.setAttribute('tabindex', '0');

                card.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        const onclickAttr = this.getAttribute('onclick');
                        if (onclickAttr) {
                            eval(onclickAttr);
                        }
                    }
                });
            });
        });

        // Function to load cart count from server
        async function loadCartCount() {
            try {
                const response = await fetch('/Cart/GetCartCount');
                const data = await response.json();
                updateCartCount(data.count);
            } catch (error) {
                console.error('Error loading cart count:', error);
                updateCartCount(0); // Fallback to 0
            }
        }

        // COMPLETELY FIXED Add to Cart function
               // In Products/Index.cshtml Scripts section
        async function addToCart(productId, event) {
            console.log('addToCart called with productId:', productId);

            event.stopPropagation();
            event.preventDefault();

            const button = event.target.closest('button');
            const spinner = button.querySelector('.loading-spinner');

            // Show loading state
            button.disabled = true;
            spinner.style.display = 'inline-block';
            const icon = button.querySelector('i');
            if (icon) icon.style.display = 'none';

            try {
                // Get anti-forgery token - try multiple ways
                let token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

                if (!token) {
                    // Try meta tag
                    token = document.querySelector('meta[name="__RequestVerificationToken"]')?.content;
                }

                console.log('Token found:', token ? 'Yes' : 'No');

                const headers = {
                    'Content-Type': 'application/json'
                };

                // Add token if found
                if (token) {
                    headers['RequestVerificationToken'] = token;
                }

                console.log('Sending request to /Cart/AddToCart with productId:', productId);

                const response = await fetch('/Cart/AddToCart', {
                    method: 'POST',
                    headers: headers,
                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    })
                });

                console.log('Response status:', response.status);

                const result = await response.json();
                console.log('Response result:', result);

                if (result.success) {
                    showToast(result.message || 'Product added to cart!');
                    updateCartCount(result.cartCount || 0);
                } else {
                    showToast(result.message || 'Error adding product to cart', 'error');
                }
            } catch (error) {
                console.error('Error details:', error);
                showToast('Network error. Please try again.', 'error');
            } finally {
                // Restore button state
                button.disabled = false;
                spinner.style.display = 'none';
                const icon = button.querySelector('i');
                if (icon) icon.style.display = 'inline-block';
            }
        }

        // Alternative: Simple test function without token
        function testAddToCart(productId) {
            console.log('Testing add to cart for product:', productId);

            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1
                })
            })
            .then(response => {
                console.log('Test response status:', response.status);
                return response.json();
            })
            .then(data => {
                console.log('Test response data:', data);
                alert(data.message || 'Test complete');
            })
            .catch(error => {
                console.error('Test error:', error);
                alert('Test failed: ' + error.message);
            });
        }

        // Show toast notification
        function showToast(message, type = 'success') {
            const toastElement = document.getElementById('cartToast');
            const toastMessage = document.getElementById('toastMessage');

            if (!toastElement || !toastMessage) {
                console.error('Toast elements not found');
                return;
            }

            toastMessage.textContent = message;

            // Remove all type classes
            toastElement.classList.remove('success', 'error', 'warning', 'info');

            // Add the current type class
            toastElement.classList.add(type);

            // Update header based on type
            const toastHeader = toastElement.querySelector('.toast-header');
            if (toastHeader) {
                let iconClass = 'fas fa-shopping-cart text-primary me-2';
                let title = 'Cart';

                if (type === 'error') {
                    iconClass = 'fas fa-exclamation-circle me-2';
                    title = 'Error';
                } else if (type === 'warning') {
                    iconClass = 'fas fa-exclamation-triangle me-2';
                    title = 'Warning';
                } else if (type === 'info') {
                    iconClass = 'fas fa-info-circle me-2';
                    title = 'Information';
                } else if (type === 'success') {
                    iconClass = 'fas fa-check-circle me-2';
                    title = 'Success';
                }

                toastHeader.innerHTML = `
                    <i class="${iconClass}"></i>
                    <strong class="me-auto">${title}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                `;
            }

            // Show the toast
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }

        // Update cart count in navbar
        function updateCartCount(count) {
            const cartCountElement = document.getElementById('cartCount');
            if (cartCountElement) {
                cartCountElement.textContent = count;
                // Always show, but change color when empty
                cartCountElement.style.display = 'block';

                if (count === 0) {
                    cartCountElement.classList.add('bg-secondary');
                    cartCountElement.classList.remove('bg-danger');
                } else {
                    cartCountElement.classList.add('bg-danger');
                    cartCountElement.classList.remove('bg-secondary');
                }
            }
        }

        // Debug function to test the add to cart
        function debugAddToCart(productId) {
            console.log('=== DEBUG ADD TO CART ===');
            console.log('1. Checking if function exists:', typeof addToCart);

            // Create a mock event
            const mockEvent = {
                stopPropagation: () => console.log('Event propagation stopped'),
                preventDefault: () => console.log('Event default prevented'),
                target: {
                    closest: (selector) => {
                        console.log('Looking for button with selector:', selector);
                        const button = document.querySelector('.add-to-cart-btn:not([disabled])');
                        console.log('Found button:', button);
                        return button;
                    }
                }
            };

            console.log('2. Calling addToCart with productId:', productId);
            addToCart(productId, mockEvent);
        }
    </script>
}
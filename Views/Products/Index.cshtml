@model IEnumerable<Ecomm.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<style>
    .truncate {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 13px;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 12px;
        line-height: 1.3;
    }

    .price-text {
        font-size: 14px;
        font-weight: bold;
    }

    .card-badge {
        font-size: 11px;
    }

    .category-text {
        font-size: 11px;
    }

    .add-to-cart-btn {
        font-size: 12px;
        padding: 0.4rem 0.8rem;
    }

    .admin-buttons {
        margin-top: 0.5rem;
    }

        .admin-buttons .btn {
            font-size: 11px;
            padding: 0.25rem 0.5rem;
        }

    .loading-spinner {
        display: none;
        width: 16px;
        height: 16px;
    }

    /* Toast styles */
    .toast {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        box-shadow: var(--shadow-lg);
    }

    .toast-header {
        background-color: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
    }

    .toast-body {
        background-color: var(--card-bg);
        color: var(--text-primary);
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@(ViewBag.SearchString ?? "")">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Category Filter -->
                    <h6>Categories</h6>
                    <div class="list-group">
                        <a href="@Url.Action("Index", "Products")"
                           class="list-group-item list-group-item-action @(ViewBag.CategoryId == null ? "active" : "")">
                            All Categories
                        </a>
                        @if (ViewBag.Categories is List<Ecomm.Models.Category> categories && categories.Any())
                        {
                            @foreach (var category in categories)
                            {
                                <a href="@Url.Action("Index", "Products", new { categoryId = category.Id, searchString = ViewBag.SearchString })"
                                   class="list-group-item list-group-item-action @(ViewBag.CategoryId?.Equals(category.Id) == true ? "active" : "")">
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9 col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Products</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Product
                    </a>
                }
            </div>

            <!-- Products Grid -->
            @if (Model?.Any() != true)
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>No products found</h4>
                    <p class="text-muted">Try adjusting your search or filter criteria</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">Clear Filters</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card h-100 product-card" onclick="window.location.href='@Url.Action("Details", new { id = product.Id })'">
                                @{
                                    // Use actual ImageUrl from database, fallback to placeholder if empty
                                    var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id}";
                                }
                                <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 180px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x180/007bff/ffffff?text=Product+Image'">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-muted flex-grow-1 truncate">@product.Description</p>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="price-text text-primary">@product.Price.ToString("C2")</span>
                                            @if (product.IsOnSale)
                                            {
                                                <span class="badge bg-danger card-badge">Sale</span>
                                            }
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="badge card-badge @(product.StockCount > 0 ? "bg-success" : "bg-danger")">
                                                @(product.StockCount > 0 ? $"{product.StockCount} in stock" : "Out of stock")
                                            </span>
                                            <small class="text-muted category-text">@(product.Category?.Name ?? "Uncategorized")</small>
                                        </div>

                                        <!-- Add to Cart Button - FIXED AJAX VERSION -->
                                        <div class="d-grid gap-2">
                                            @if (product.StockCount > 0)
                                            {
                                                <button type="button" class="btn btn-primary add-to-cart-btn"
                                                        onclick="addToCart(@product.Id, event)">
                                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                                    <div class="spinner-border spinner-border-sm loading-spinner" role="status">
                                                        <span class="visually-hidden">Loading...</span>
                                                    </div>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary add-to-cart-btn" disabled>
                                                    <i class="fas fa-cart-plus"></i> Out of Stock
                                                </button>
                                            }
                                        </div>

                                        <!-- Admin buttons (only show for admin users) -->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="admin-buttons">
                                                <div class="btn-group w-100">
                                                    <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-outline-danger btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="cartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-shopping-cart text-primary me-2"></i>
            <strong class="me-auto">Cart</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Product added to cart!
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load cart count when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadCartCount(); // Load initial cart count

            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.style.cursor = 'pointer';
                card.setAttribute('tabindex', '0');

                card.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        const onclickAttr = this.getAttribute('onclick');
                        if (onclickAttr) {
                            eval(onclickAttr);
                        }
                    }
                });
            });
        });

        // Function to load cart count from server
        async function loadCartCount() {
            try {
                const response = await fetch('/Cart/GetCartCount');
                const data = await response.json();
                updateCartCount(data.count);
            } catch (error) {
                console.error('Error loading cart count:', error);
                updateCartCount(0); // Fallback to 0
            }
        }

        // Add to Cart function with AJAX
        async function addToCart(productId, event) {
            event.stopPropagation(); // Prevent card click

            const button = event.target.closest('button');
            const spinner = button.querySelector('.loading-spinner');

            // Show loading state
            button.disabled = true;
            spinner.style.display = 'inline-block';
            button.querySelector('i').style.display = 'none';

            try {
                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Cart/AddToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Show success message as toast notification
                    showToast(result.message);

                    // Update cart count in navbar
                    updateCartCount(result.cartCount);
                } else {
                    // Show error message
                    showToast(result.message || 'Error adding product to cart', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Network error. Please try again.', 'error');
            } finally {
                // Restore button state
                button.disabled = false;
                spinner.style.display = 'none';
                button.querySelector('i').style.display = 'inline-block';
            }
        }

        // Show toast notification
        function showToast(message, type = 'success') {
            const toastElement = document.getElementById('cartToast');
            const toastMessage = document.getElementById('toastMessage');

            toastMessage.textContent = message;

            // Set background color based on type
            if (type === 'error') {
                toastElement.querySelector('.toast-header').classList.add('bg-danger', 'text-white');
            } else {
                toastElement.querySelector('.toast-header').classList.remove('bg-danger', 'text-white');
            }

            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }

        // Update cart count in navbar - FIXED VERSION
        function updateCartCount(count) {
            const cartCountElement = document.getElementById('cartCount');
            if (cartCountElement) {
                cartCountElement.textContent = count;
                // Always show, but change color when empty
                cartCountElement.style.display = 'block';

                if (count === 0) {
                    cartCountElement.classList.add('bg-secondary');
                    cartCountElement.classList.remove('bg-danger');
                } else {
                    cartCountElement.classList.add('bg-danger');
                    cartCountElement.classList.remove('bg-secondary');
                }
            }
        }
    </script>
}
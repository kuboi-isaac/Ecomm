@model IEnumerable<Ecomm.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<style>
    .truncate {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 13px;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 12px;
        line-height: 1.3;
    }

    .price-text {
        font-size: 14px;
        font-weight: bold;
    }

    .card-badge {
        font-size: 11px;
    }

    .category-text {
        font-size: 11px;
    }

    .add-to-cart-btn {
        font-size: 12px;
        padding: 0.4rem 0.8rem;
    }

    .admin-buttons {
        margin-top: 0.5rem;
    }

        .admin-buttons .btn {
            font-size: 11px;
            padding: 0.25rem 0.5rem;
        }

    .clickable-area {
        text-decoration: none;
        color: inherit;
        display: block;
    }

        .clickable-area:hover {
            color: inherit;
            text-decoration: none;
        }

    .non-clickable {
        pointer-events: none;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <form method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@(ViewBag.SearchString ?? "")">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Category Filter -->
                    <h6>Categories</h6>
                    <div class="list-group">
                        <a href="@Url.Action("Index", "Products")"
                           class="list-group-item list-group-item-action @(ViewBag.CategoryId == null ? "active" : "")">
                            All Categories
                        </a>
                        @if (ViewBag.Categories is List<Ecomm.Models.Category> categories && categories.Any())
                        {
                            @foreach (var category in categories)
                            {
                                <a href="@Url.Action("Index", "Products", new { categoryId = category.Id, searchString = ViewBag.SearchString })"
                                   class="list-group-item list-group-item-action @(ViewBag.CategoryId?.Equals(category.Id) == true ? "active" : "")">
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9 col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Products</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Product
                    </a>
                }
            </div>

            <!-- Products Grid -->
            @if (Model?.Any() != true)
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>No products found</h4>
                    <p class="text-muted">Try adjusting your search or filter criteria</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">Clear Filters</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                            <div class="card h-100 product-card" onclick="window.location.href='@Url.Action("Details", new { id = product.Id })'">
                                @{
                                    // Use actual ImageUrl from database, fallback to placeholder if empty
                                    var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id}";
                                }
                                <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 180px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x180/007bff/ffffff?text=Product+Image'">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-muted flex-grow-1 truncate">@product.Description</p>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="price-text text-primary">@product.Price.ToString("C2")</span>
                                            @if (product.IsOnSale)
                                            {
                                                <span class="badge bg-danger card-badge">Sale</span>
                                            }
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="badge card-badge @(product.StockCount > 0 ? "bg-success" : "bg-danger")">
                                                @(product.StockCount > 0 ? $"{product.StockCount} in stock" : "Out of stock")
                                            </span>
                                            <small class="text-muted category-text">@(product.Category?.Name ?? "Uncategorized")</small>
                                        </div>

                                        <!-- Add to Cart Button -->
                                        <div class="d-grid gap-2">
                                            @if (product.StockCount > 0)
                                            {
                                                <form method="post" action="@Url.Action("AddToCart", "Cart")" class="add-to-cart-form">
                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                    <input type="hidden" name="quantity" value="1" />
                                                    <button type="submit" class="btn btn-primary w-100 add-to-cart-btn" onclick="event.stopPropagation()">
                                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary w-100 add-to-cart-btn" disabled onclick="event.stopPropagation()">
                                                    <i class="fas fa-cart-plus"></i> Out of Stock
                                                </button>
                                            }
                                        </div>

                                        <!-- Admin buttons (only show for admin users) -->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="admin-buttons">
                                                <div class="btn-group w-100">
                                                    <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-outline-danger btn-sm" onclick="event.stopPropagation()">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Enhanced click handling
    document.addEventListener('DOMContentLoaded', function() {
        const productCards = document.querySelectorAll('.product-card');

        productCards.forEach(card => {
            // Make the entire card clickable (except for buttons/forms)
            card.style.cursor = 'pointer';

            // Add enter key support for accessibility
            card.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    const clickableElement = this.querySelector('[onclick]');
                    if (clickableElement) {
                        const onclickAttr = clickableElement.getAttribute('onclick');
                        if (onclickAttr) {
                            eval(onclickAttr);
                        }
                    }
                }
            });

            // Set tabindex for accessibility
            card.setAttribute('tabindex', '0');
        });

        // Handle form submissions
        const addToCartForms = document.querySelectorAll('.add-to-cart-form');
        addToCartForms.forEach(form => {
            form.addEventListener('submit', function(e) {
                e.stopPropagation();
                // Optional: Add AJAX submission here for better UX
                // this.submit(); // This will submit the form normally
            });
        });
    });
</script>
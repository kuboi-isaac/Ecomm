@model Ecomm.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Products</a></li>
            <li class="breadcrumb-item active">Edit Product</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Edit Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">Product Name *</label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label">Price *</label>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category *</label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required>
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StockCount" class="form-label">Stock Count *</label>
                                    <input asp-for="StockCount" type="number" class="form-control" min="0" required />
                                    <span asp-validation-for="StockCount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Image Options -->
                        <div class="form-group mb-3">
                            <label class="form-label">Product Image</label>

                            <!-- Option 1: Image URL -->
                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Paste any online image URL (from Unsplash, Picsum, Imgur, etc.)
                                </small>
                            </div>

                            <!-- Option 2: File Upload -->
                            <div class="mb-3">
                                <label class="form-label">Or Upload Image File</label>
                                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">
                                    Choose this if you want to upload a local image file
                                </small>
                            </div>

                            <div class="alert alert-info">
                                <small>
                                    <strong>Note:</strong> Both options work independently.
                                    File upload will save the image to your server, while URL will use the online image directly.
                                </small>
                            </div>
                        </div>

                        <!-- Image Preview -->
                        <div class="form-group mb-3">
                            <label class="form-label">Image Preview</label>
                            <div>
                                <img id="imagePreview" src="@Model.ImageUrl" class="img-thumbnail"
                                     style="max-height: 200px; object-fit: contain;"
                                     onerror="this.src='https://via.placeholder.com/300x200/007bff/ffffff?text=Image+Not+Found'"
                                     alt="Product image preview">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="IsOnSale" class="form-check-input" />
                                    <label asp-for="IsOnSale" class="form-check-label">On Sale</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save"></i> Update Product
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Products
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Live image preview for URL input
        document.getElementById('ImageUrl').addEventListener('input', function() {
            const preview = document.getElementById('imagePreview');
            if (preview && this.value) {
                preview.src = this.value;
            }
        });

        // Live image preview for file upload
        document.querySelector('input[name="imageFile"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
@model Ecomm.Controllers.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .category-card:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease;
    }

    .hero-section {
        background: linear-gradient(135deg, #000000 0%, #1E90FF 100%);
    }

    /* Card Version Styles */
    .feature-card {
        background-color: var(--card-bg);
        transition: all 0.3s ease;
        box-shadow: var(--shadow);
    }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
            border-color: var(--accent-primary);
        }

            .feature-card:hover i {
                transform: scale(1.1);
                transition: transform 0.3s ease;
            }
</style>

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-3 mb-5">
    <div class="container rounded-0">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to Our E-Commerce Store</h1>
                <p class="lead">Discover amazing products at great prices. Shop with confidence and enjoy fast delivery.</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-light btn-lg mt-3">Shop Now</a>
            </div>
            <div class="col-lg-6">
                <!-- Simple Product Image Carousel -->
                <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-3 shadow-lg">
                        @if (Model.FeaturedProducts.Any())
                        {
                            @for (int i = 0; i < Model.FeaturedProducts.Count && i < 5; i++)
                            {
                                var product = Model.FeaturedProducts[i];
                                var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/500/400?random={product.Id}";

                                <div class="carousel-item @(i == 0 ? "active" : "") position-relative">
                                    <img src="@imageUrl" class="d-block w-100 rounded-3" alt="@product.Name"
                                         style="height: 300px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/500x400/007bff/ffffff?text=Product+Image'">
                                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-3">
                                        <h5>@product.Name</h5>
                                        <p class="mb-1">@product.Price.ToString("C2")</p>
                                        <a href="@Url.Action("Details", "Products", new { id = product.Id })"
                                           class="btn btn-primary btn-sm">View</a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="https://www.atamgo.com/wp-content/uploads/2023/07/Ecommerce-Store.jpg"
                                     class="d-block w-100 rounded-3" alt="Ecommerce Store"
                                     style="height: 400px; object-fit: cover;">
                            </div>
                        }
                    </div>

                    <!-- Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#productImageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productImageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize simple image carousel
        var imageCarousel = new bootstrap.Carousel(document.getElementById('productImageCarousel'), {
            interval: 5000, // 5 seconds
            wrap: true
        });
    });
</script>

<!-- Low Stock Alerts -->
@if (Model.LowStockAlerts.Any())
{
    <div class="container mb-5">
        <div class="alert alert-warning">
            <h4><i class="fas fa-exclamation-triangle"></i> Low Stock Alerts</h4>
            <div class="row">
                @foreach (var product in Model.LowStockAlerts)
                {
                    <div class="col-md-4 mb-2">
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="text-decoration-none">
                            <strong>@product.Name</strong> - Only @product.StockCount left!
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Featured Products -->
<section class="container py-1 mb-1">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Featured Products</h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">View All</a>
    </div>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 product-card">
                    @{
                        // Use actual ImageUrl from database, fallback to placeholder if empty
                        var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id + 100}";
                    }
                    <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x200/007bff/ffffff?text=Featured+Product'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted flex-grow-1 truncate-3">@product.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary mb-0">@product.Price.ToString("C2")</span>
                                @if (product.IsOnSale)
                                {
                                    <span class="badge bg-danger">Sale</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="text-muted small">Stock: @product.StockCount</span>
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- New Arrivals -->
<section class="container mb-2">
    <h2 class="mb-4">New Arrivals</h2>
    <div class="row">
        @foreach (var product in Model.NewArrivals)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                <div class="card h-100">
                    @{
                        // Use actual ImageUrl from database, fallback to placeholder if empty
                        var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/150/120?random={product.Id + 200}";
                    }
                    <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 120px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/150x120/28a745/ffffff?text=New+Arrival'">
                    <div class="card-body p-2">
                        <h6 class="card-title small truncate-2">@product.Name</h6>
                        <p class="card-text small text-primary mb-1">@product.Price.ToString("C2")</p>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-outline-primary btn-sm w-100">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Categories -->
<section class="container mb-3">
    <h2 class="mb-4">Shop by Category</h2>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col mb-4">
                <div class="card category-card h-80 w-60">
                    <div class="card-body text-center d-flex flex-column">
                        <div class="mb-3">
                            @{
                                var categoryIcon = category.Name.ToLower() switch
                                {
                                    "electronics" => "fas fa-laptop",
                                    "clothing" => "fas fa-tshirt",
                                    "books" => "fas fa-book",
                                    "home & garden" => "fas fa-home",
                                    _ => "fas fa-folder"
                                };
                                var categoryColor = category.Name.ToLower() switch
                                {
                                    "electronics" => "text-info",
                                    "clothing" => "text-success",
                                    "books" => "text-warning",
                                    "home & garden" => "text-danger",
                                    _ => "text-primary"
                                };
                            }
                            <i class="@categoryIcon fa-3x @categoryColor"></i>
                        </div>
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text text-muted">@category.Products.Count products</p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })" class="btn btn-outline-primary">Browse Category</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Special Deals - Card Version -->

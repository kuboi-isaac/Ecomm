<!-- Categories -->
<section class="container mb-5">
    <h2 class="mb-4">Shop by Category</h2>
    <div class="row">
        @foreach (var category in Model.Categories.Take(4))
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 category-card" onclick="window.location.href='@Url.Action("Index", "Products", new { categoryId = category.Id })'">
                    <div class="card-body text-center d-flex flex-column">
                        <div class="mb-3">
                            @{
                                var categoryIcon = category.Name.ToLower() switch
                                {
                                    "electronics" => "fas fa-laptop",
                                    "clothing" => "fas fa-tshirt",
                                    "books" => "fas fa-book",
                                    "home & garden" => "fas fa-home",
                                    _ => "fas fa-folder"
                                };
                                var categoryColor = category.Name.ToLower() switch
                                {
                                    "electronics" => "text-info",
                                    "clothing" => "text-success",
                                    "books" => "text-warning",
                                    "home & garden" => "text-danger",
                                    _ => "text-primary"
                                };
                            }
                            <i class="@categoryIcon fa-2x @categoryColor"></i>
                        </div>
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text text-muted" style="font-size: 0.875rem;">@category.Products.Count products</p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })" class="btn btn-outline-primary btn-sm-custom" onclick="event.stopPropagation()">
                                Browse Category
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


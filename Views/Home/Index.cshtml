    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-card card h-100 border-0">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Free Shipping</h5>
                        <p class="card-text deals-text">Free shipping on orders over $50</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card card h-100 border-0">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-undo-alt fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Easy Returns</h5>
                        <p class="card-text deals-text">30-day return policy</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card card h-100 border-0">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-lock fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Secure Payment</h5>
                        <p class="card-text deals-text">Your payment information is safe</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@model Ecomm.Controllers.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .category-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .hero-section {
        background: linear-gradient(135deg, #000000 0%, #1E90FF 100%);
    }

    /* Card Version Styles */
    .feature-card {
        background-color: var(--card-bg);
        transition: all 0.3s ease;
        box-shadow: var(--shadow);
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--accent-primary);
        }

            .feature-card:hover i {
                transform: scale(1.1);
                transition: transform 0.3s ease;
            }

    /* Consistent font sizes */
    .card-title {
        font-size: 13px;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 12px;
        line-height: 1.3;
    }

    .price-text {
        font-size: 14px;
        font-weight: bold;
    }

    .card-badge {
        font-size: 11px;
    }

    .category-text {
        font-size: 11px;
    }

    .btn-sm-custom {
        font-size: 12px;
        padding: 0.4rem 0.8rem;
    }

    .stock-text {
        font-size: 11px;
    }

    .clickable-card {
        text-decoration: none;
        color: inherit;
        display: block;
    }

        .clickable-card:hover {
            color: inherit;
            text-decoration: none;
        }
</style>

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-3 mb-5">
    <div class="container rounded-3">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to Our E-Commerce Store</h1>
                <p class="lead">Discover amazing products at great prices. Shop with confidence and enjoy fast delivery.</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-light btn-lg mt-3">Shop Now</a>
            </div>
            <div class="col-lg-6">
                <!-- Simple Product Image Carousel -->
                <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-3 shadow-lg">
                        @if (Model.FeaturedProducts.Any())
                        {
                            @for (int i = 0; i < Model.FeaturedProducts.Count && i < 5; i++)
                            {
                                var product = Model.FeaturedProducts[i];
                                var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/500/400?random={product.Id}";

                                <div class="carousel-item @(i == 0 ? "active" : "") position-relative">
                                    <img src="@imageUrl" class="d-block w-100 rounded-3" alt="@product.Name"
                                         style="height: 300px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/500x400/007bff/ffffff?text=Product+Image'">
                                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-3">
                                        <h5>@product.Name</h5>
                                        <p class="mb-1">@product.Price.ToString("C2")</p>
                                        <a href="@Url.Action("Details", "Products", new { id = product.Id })"
                                           class="btn btn-primary btn-sm">View</a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="https://www.atamgo.com/wp-content/uploads/2023/07/Ecommerce-Store.jpg"
                                     class="d-block w-100 rounded-3" alt="Ecommerce Store"
                                     style="height: 400px; object-fit: cover;">
                            </div>
                        }
                    </div>

                    <!-- Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#productImageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productImageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize simple image carousel
        var imageCarousel = new bootstrap.Carousel(document.getElementById('productImageCarousel'), {
            interval: 5000, // 5 seconds
            wrap: true
        });
    });
</script>

<!-- Low Stock Alerts -->
@if (Model.LowStockAlerts.Any())
{
    <div class="container mb-5">
        <div class="alert alert-warning">
            <h4 class="mb-3"><i class="fas fa-exclamation-triangle"></i> Low Stock Alerts</h4>
            <div class="row">
                @foreach (var product in Model.LowStockAlerts)
                {
                    <div class="col-md-4 mb-2">
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="text-decoration-none">
                            <strong style="font-size: 13px;">@product.Name</strong>
                            <span style="font-size: 12px;" class="text-danger">- Only @product.StockCount left!</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Featured Products -->
<section class="container py-1 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Featured Products</h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-sm-custom">View All</a>
    </div>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col">
                <div class="card h-100 product-card" onclick="window.location.href='@Url.Action("Details", "Products", new { id = product.Id })'">
                    @{
                        var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id + 100}";
                    }
                    <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 180px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x180/007bff/ffffff?text=Featured+Product'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted flex-grow-1 truncate-3">@product.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="price-text text-primary">@product.Price.ToString("C2")</span>
                                @if (product.IsOnSale)
                                {
                                    <span class="badge bg-danger card-badge">Sale</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge card-badge @(product.StockCount > 0 ? "bg-success" : "bg-danger")">
                                    @(product.StockCount > 0 ? $"{product.StockCount} in stock" : "Out of stock")
                                </span>
                                <small class="text-muted category-text">@(product.Category?.Name ?? "Uncategorized")</small>
                            </div>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary btn-sm-custom" onclick="event.stopPropagation()">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- New Arrivals -->
<section class="container mb-2">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>New Arrivals</h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-sm-custom">View All</a>
    </div>
    <div class="row">
        @foreach (var product in Model.NewArrivals)
        {
            <div class="col-xl-4">
                <div class="card h-100 product-card" onclick="window.location.href='@Url.Action("Details", "Products", new { id = product.Id })'">
                    @{
                        var imageUrl = !string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : $"https://picsum.photos/300/200?random={product.Id + 200}";
                    }
                    <img src="@imageUrl" class="card-img-top" alt="@product.Name" style="height: 180px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/300x180/28a745/ffffff?text=New+Arrival'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted flex-grow-1 truncate-3">@product.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="price-text text-primary">@product.Price.ToString("C2")</span>
                                @if (product.IsOnSale)
                                {
                                    <span class="badge bg-danger card-badge">Sale</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge card-badge @(product.StockCount > 0 ? "bg-success" : "bg-danger")">
                                    @(product.StockCount > 0 ? $"{product.StockCount} in stock" : "Out of stock")
                                </span>
                                <small class="text-muted category-text">@(product.Category?.Name ?? "Uncategorized")</small>
                            </div>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-primary btn-sm-custom" onclick="event.stopPropagation()">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Categories -->
<section class="container mb-5">
    <h2 class="mb-4">Shop by Category</h2>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col">
                <div class="card h-100 category-card" onclick="window.location.href='@Url.Action("Index", "Products", new { categoryId = category.Id })'">
                    <div class="card-body text-center d-flex flex-column">
                        <div class="mb-3">
                            @{
                                var categoryIcon = category.Name.ToLower() switch
                                {
                                    "electronics" => "fas fa-laptop",
                                    "clothing" => "fas fa-tshirt",
                                    "books" => "fas fa-book",
                                    "home & garden" => "fas fa-home",
                                    _ => "fas fa-folder"
                                };
                                var categoryColor = category.Name.ToLower() switch
                                {
                                    "electronics" => "text-info",
                                    "clothing" => "text-success",
                                    "books" => "text-warning",
                                    "home & garden" => "text-danger",
                                    _ => "text-primary"
                                };
                            }
                            <i class="@categoryIcon fa-2x @categoryColor"></i>
                        </div>
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text text-muted" style="font-size: 12px;">@category.Products.Count products</p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })" class="btn btn-outline-primary btn-sm-custom" onclick="event.stopPropagation()">
                                Browse Category
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Special Deals - Card Version -->

@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row min-vh-100 justify-content-center align-content-center">
        <div class="col-lg-5 col-md-6 text-black">
            <div class="login-form-container">
                <!-- Header -->
                <div class="login-header text-center mb-2">
                    <div class="mobile-logo d-lg-none mb-3">
                        <i class="fas fa-shopping-bag fa-2x text-primary mb-2"></i>
                        <h4 class="">Ecomm</h4>
                    </div>
                    <h2 class="login-title mb-2">Sign In</h2>
                    <p class="login-subtitle">Sign in to your account</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="Input.Email" class="form-control"
                                   placeholder="Enter your email" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input asp-for="Input.Password" class="form-control"
                                   placeholder="Enter your password" autocomplete="current-password"
                                   id="passwordInput" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <!-- Options -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label small">
                                Remember me
                            </label>
                        </div>
                        <a asp-page="./ForgotPassword" class="text-decoration-none small">
                            Forgot password?
                        </a>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-outline-success w-50 py-2 mb-4 mx-auto d-block" id="loginBtn">
                        <span class="btn-text">Login</span>
                        <div class="btn-spinner spinner-border spinner-border-sm d-none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </button>

                    <!-- Register -->
                    <div class="text-center">
                        <span class="text-muted small">Don't have an account? </span>
                        <a asp-page="./Register" class="text-decoration-none small fw-semibold">
                            Sign up
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('passwordInput');
            const togglePassword = document.getElementById('togglePassword');
            const loginBtn = document.getElementById('loginBtn');
            const form = document.querySelector('form');

            // Toggle password visibility
            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                this.querySelector('i').className = type === 'password' ? 'fas fa-eye' : 'fas fa-eye-slash';
            });

            // Form submission
            form.addEventListener('submit', function() {
                const btnText = loginBtn.querySelector('.btn-text');
                const spinner = loginBtn.querySelector('.btn-spinner');

                btnText.classList.add('d-none');
                spinner.classList.remove('d-none');
                loginBtn.disabled = true;
            });
        });
    </script>
}

<style>
    .login-form-container {
        background: #f0f0f0;
        border-radius: 5px;
        padding: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .login-title {
        font-weight: 700;
        color: #1a202c;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 0.5rem;
    }

    .input-group-text {
        background: #f7fafc;
        border: 1px solid #e2e8f0;
        border-right: none;
    }

    .form-control {
        border: 1px solid #e2e8f0;
        padding: 0.75rem;
    }

        .form-control:focus {
            border-color: #4299e1;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        }

    .btn-primary {
        background: #4299e1;
        border: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background: #3182ce;
            transform: translateY(-1px);
        }

        .btn-primary:disabled {
            background: #a0aec0;
            transform: none;
        }

    .btn-outline-secondary {
        border: 1px solid #e2e8f0;
        border-left: none;
    }

    .form-check-input:checked {
        background-color: #4299e1;
        border-color: #4299e1;
    }

    a {
        color: #4299e1;
        transition: color 0.2s ease;
    }

        a:hover {
            color: #3182ce;
        }

    /* Mobile */
    @@media (max-width: 768px) {
        .login-form-container {
            padding: 1.5rem;
            margin: 1rem;
            box-shadow: none;
            border: 1px solid #e2e8f0;
        }

        .container {
            padding: 0;
        }
    }
</style>